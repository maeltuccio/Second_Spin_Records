<h1 class="text-center my-4">My Chatrooms</h1>

<div class="container">
  <div class="row justify-content-center">
    <% @chatrooms.each do |chatroom| %>
      <div class="col-12 col-md-8 mb-3">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <p class="card-text mb-1">
                Chatroom with:
                <% if current_user.id == chatroom.user1_id %>
                  <strong class="text-primary"><%= chatroom.user2.email %></strong>
                <% else %>
                  <strong class="text-primary"><%= chatroom.user1.email %></strong>
                <% end %>
              </p>
            </div>
            <div>
              <%= link_to "View Chat", chatroom_path(chatroom), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

