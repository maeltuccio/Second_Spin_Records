
<%= render "chatrooms/chatroom_video" %>
<h1 class="text-center my-4">My Chatrooms</h1>
<turbo-frame id="dashboard_content"><div class="d-flex">
<div class="container w-50">
  <div class="row justify-content-center">
    <% @chatrooms.each do |chatroom| %>
      <div class="col-12 col-md-8 mb-3">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <p class="card-text mb-1">
                Chatroom with:
                <% if current_user.id == chatroom.user1_id %>
                  <strong class="text-primary"><%= chatroom.user2.email %></strong>
                <% else %>
                  <strong class="text-primary"><%= chatroom.user1.email %></strong>
                <% end %>
              </p>
            </div>
            <div>
           <%= link_to chatroom_path(chatroom), data: { turbo_frame: "chatroom" }, class: "btn btn-primary btn-sm" do %>
  <i class="fa-solid fa-inbox"></i>
<% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag "chatroom", class: "w-50" %>
</div>
</turbo-frame>
