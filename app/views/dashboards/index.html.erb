<h1 class="text-center my-4">Bienvenue sur votre Dashboard, <%= current_user.email %> !</h1>

<div class="container-fluid">
  <div class="row">
    <!-- Menu de gauche -->
    <div class="col-md-3">
      <div class="list-group">
        <%= link_to "Home", dashboard_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Collection", collections_path, data: { turbo_frame: "dashboard_content" }, class: "list-group-item list-group-item-action" %>
        <%= link_to "Wishlist", wishlists_path, data: { turbo_frame: "dashboard_content" }, class: "list-group-item list-group-item-action" %>
        <%= link_to "Chatrooms", chatrooms_path, data: { turbo_frame: "dashboard_content" }, class: "list-group-item list-group-item-action" %>
      </div>
    </div>

    <!-- Contenu dynamique dans le Turbo Frame -->
    <div class="col-md-9">
      <%= turbo_frame_tag "dashboard_content" do %>
        <div class="dashboard-welcome">
          <div class="row">
            <div class="col-12">
              <!-- Bannière avec bouton "Play Now" -->
              <div class="dashboard-banner text-center my-5">
                <h3 class="mb-4">Explorez de nouveaux horizons musicaux</h3>
                <%= link_to "Play Now", collections_path, class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          </div>

          <!-- Section "For You" avec des recommandations basées sur la wishlist -->
          <div class="for-you-section">
            <h3 class="my-4">For You</h3>
            <ul class="list-group">
              <% @recommendations.each do |recommendation| %>
                <li class="list-group-item">
                  <strong><%= recommendation.title %></strong> - <%= recommendation.artist %>
                  <%= link_to "écouter un extrait", "#", class: "btn btn-secondary btn-sm float-end" %>
                  </li>
              <% end %> <!-- Fermeture de la boucle each -->
            </ul>
          </div>
        </div>
      <% end %> <!-- Fermeture du turbo_frame_tag -->
    </div>
  </div>
</div>
