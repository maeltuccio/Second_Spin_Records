
<div class="form-group" data-controller="discojs">
  <%= label_tag :search, "Search for a disc", class: "form-label" %>

  <%= text_field_tag :search, "", class: "form-control", data: { target: "discojs.searchInput" } %>

  <%= button_tag "Search", type: "button", class: "btn btn-primary", data: { action: "click->discojs#search" } %>

  <!-- Zone pour afficher les rÃ©sultats de recherche -->
  <div data-discojs-target="searchResults" class="mt-3"></div>



  <!-- Formulaire -->


  <%= form_with model: @disc, local: true, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", data: { discojs_target: "title" } %>
  </div>

  <div class="form-group">
    <%= f.label :artist, "Artist", class: "form-label" %>
    <%= f.text_field :artist, class: "form-control", data: { discojs_target: "artist" } %>
  </div>

  <div class="form-group">
    <%= f.label :genre, "Genre", class: "form-label" %>
    <%= f.text_field :genre, class: "form-control", data: { discojs_target: "genre" }  %>
  </div>

  <div class="form-group">
    <%= f.label :suggested_price, "Suggested Price", class: "form-label" %>
    <%= f.number_field :suggested_price, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :label, "Label", class: "form-label" %>
    <%= f.text_field :label, class: "form-control", data: { discojs_target: "label" }  %>
  </div>

  <div class="form-group">
    <%= f.label :release_date, "Release Date", class: "form-label" %>
    <%= f.text_field :release_date, class: "form-control", data: { discojs_target: "releaseDate" } %>
  </div>

  <div class="form-group">
    <%= f.label :cat_number, "Catalog Number", class: "form-label" %>
    <%= f.text_field :cat_number, class: "form-control", data: { discojs_target: "catNumber" }  %>
  </div>


  <div class="form-group">
    <%= f.label :photo, "Upload an Image", class: "form-label" %>
    <%= f.file_field :photo, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :audio, "Upload an Audio File", class: "form-label" %>
    <%= f.file_field :audio, class: "form-control-file" %>
  </div>



  <div class="form-group">
    <%= f.submit "Create Disc", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
</div>
<%= link_to "Back to all discs", discs_path, class: "btn btn-secondary" %>
