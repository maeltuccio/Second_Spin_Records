


<h1 class="text-center my-4">Available Discs</h1>
<!-- Carrousel pour afficher les disques -->
<div id="discCarousel" class="carousel slide my-5" data-bs-ride="carousel">
  <!-- Indicateurs -->
  <ol class="carousel-indicators">
    <% @discs.each_with_index do |disc, index| %>
      <li data-bs-target="#discCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index.zero? %>"></li>
    <% end %>
  </ol>
  <!-- Contenu du carrousel -->
  <div class="carousel-inner">
    <% @discs.each_with_index do |disc, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <% if disc.cover_url.present? %>
          <img src="<%= disc.cover_url %>" class="d-block w-100" alt="Cover of <%= disc.title %>">
        <% else %>
            <%= image_tag "secondspin.png", class:"d-block w-100", alt: "Default cover" %>
        <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%= disc.title %></h5>
          <p><%= disc.artist %></p>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Contrôles -->
  <a class="carousel-control-prev" href="#discCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#discCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!-- Liste des disques -->
<ul class="list-group">
  <% @discs.each do |disc| %>

  <%= link_to disc_path(disc), class:"card-mini-link" do %>
    <div class="card-mini poppins-italic">
      <div class="card-mini-content">
        <h3 class="card-mini-title">Title: <%= disc.title %></h3>
        <p><strong>Artist:</strong> <%= disc.artist %></p>
        <p><strong>Genre:</strong> <%= disc.genre %></p>
        <p><strong>Label:</strong> <%= disc.label %></p>
        <p><strong>Release Date:</strong> <%= disc.release_date.present? ? disc.release_date : "Unknown" %></p>
        <p><strong>Catalog Number:</strong> <%= disc.cat_number %></p>
        <div class=".btn-wishlist-mini"><i class="fas fa-heart"></i></div>
        <!-- Lien vers la page des détails -->


        <%# <%= link_to "View Details", disc_path(disc), class: "btn btn-primary mt-3" %>
      </div>

      <!-- Affichage de l'image de couverture si elle existe -->
      <% if disc.cover_url.present? %>
        <div class="card-mini-image" style="background-image: url('<%= disc.cover_url %>');"></div>
      <% end %>
    </div>
    <% end %>



  <% end %>
</ul>
<!-- Footer -->
<footer class="footer bg-dark text-white py-3 mt-5">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Liens de navigation -->
    <ul class="list-inline mb-0">
      <li class="list-inline-item"><%= link_to "Home", root_path, class: "text-white" %></li>
      <li class="list-inline-item"><a href="#" class="text-white">About</a></li>
    </ul>
    <!-- Copyright -->
    <p class="mb-0 text-center">Copyright Second Spin Records</p>
    <!-- Réseaux sociaux -->
    <ul class="list-inline mb-0">
      <li class="list-inline-item"><a href="https://facebook.com" target="_blank" class="text-white rounded-circle d-inline-flex justify-content-center align-items-center social-icon">Fb</a></li>
      <li class="list-inline-item"><a href="https://twitter.com" target="_blank" class="text-white rounded-circle d-inline-flex justify-content-center align-items-center social-icon">X</a></li>
      <li class="list-inline-item"><a href="https://instagram.com" target="_blank" class="text-white rounded-circle d-inline-flex justify-content-center align-items-center social-icon">Ig</a></li>
      <li class="list-inline-item"><a href="https://twitter.com" target="_blank" class="text-white rounded-circle d-inline-flex justify-content-center align-items-center social-icon">Tw</a></li>
    </ul>
  </div>
</footer>
