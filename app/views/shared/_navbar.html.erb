<div class="navbar navbar-expand-lg navbar-light navbar-lewagon">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag "second spin (1).png", alt: "Second Spin Records", class: "navbar-logo" %>
    <% end %>
    <!-- Formulaire de recherche -->
    <div class="search-bar mx-auto">
      <%= form_with url: discs_path, method: :get, local: true, class: "d-flex align-items-center" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control search-input",
              placeholder: "Looking for a disc ?" %>
        <button type="submit" class="btn btn-search">
          <i class="bi bi-search"></i>
        </button>
      <% end %>
    </div>
    <!-- Boutons et liens -->
    <ul class="navbar-nav d-flex align-items-center">
      <li class="nav-item">
        <%= link_to dashboard_path, class: "nav-link d-flex align-items-center" do %>
          <i class="bi bi-house"></i>
          <span class="ms-2">Dashboards</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link d-flex align-items-center" do %>
          <i class="bi bi-chat-dots"></i>
          <span class="ms-2">Messages</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_disc_path, class: "nav-link d-flex align-items-center" do %>
          <i class="bi bi-plus-circle"></i>
          <span class="ms-2">Poster un disque</span>
        <% end %>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link d-flex align-items-center">
          <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" alt="Me" class="avatar">
        </a>
      </li>
    </ul>
  </div>
</div>
